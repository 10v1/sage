// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "Debian buster 32-bit",
	"build": {
		"dockerfile": "Dockerfile",
	    // See tox.ini for definitions
	    "args": { "SYSTEM_FACTOR":	"debian-buster-i386",
		      "PACKAGE_FACTOR": "standard",
		      "DOCKER_TARGET":	"with-targets",
		      "DOCKER_TAG":	"dev"
		    }
	},
	"containerEnv": {
	    "MAKE": "make -j12"
	},
	// Run commands after the container is created:
	"postCreateCommand": ".devcontainer/post_create.sh",
	// Run commands after the container is started.
	"postStartCommand": "make configure && ./configure --enable-build-as-root --prefix=/sage/local --with-sage-venv && make build V=0",
	"extensions": [
	    "ms-python.python"
        ]
}
